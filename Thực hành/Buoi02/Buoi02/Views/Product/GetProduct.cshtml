@model IEnumerable<Buoi02.Models.Product>
@using Buoi02.Models

@{
    ViewBag.Title = "GetProduct";    
}

<head>
    <link href="~/StyteSheep/css.css" rel="stylesheet" style="text/css"/>
</head>
<h2>GetProduct</h2>

@{ 
    List<Product> products = (List<Product>)ViewBag.Products;
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PriductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in products) {   
<tr>

    @if (item.Id % 2 == 0)
    {
        <td style="background-color:yellow">
            @Html.DisplayFor(modelItem => item.PriductName)
        </td>
        <td style="background-color:yellow">
            <img class="picture" src="@item.ProductImage" />
        </td>
        <td style="background-color:yellow">
            @Html.DisplayFor(modelItem => item.ProductType)
        </td>
        <td style="background-color:yellow">
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>
        <td style="background-color:yellow">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    }
    else
    {
        <td style="background-color:red">
            @Html.DisplayFor(modelItem => item.PriductName)
        </td>
        <td style="background-color:red">
            <img class="picture" src="~/image/dell_inspiron_16.png" />
        </td>
        <td style="background-color: red ">
            @Html.DisplayFor(modelItem => item.ProductType)
        </td>

        <td style="background-color: red ">
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>

        <td style="background-color: red ">
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    }
</tr>
}

</table>
